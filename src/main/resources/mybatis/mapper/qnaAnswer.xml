<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-/mabatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.exe.cozy.mapper.QnaAnswerMapper">

	<!--새 답변 번호 -->
	<select id="qnaAnswerMaxNum" resultType="int">		
		select nvl(max(qnaAnswerNum),0)
		from qnaAnswer	
	</select>

	<!-- 답변등록 -->
	<insert id="insertQnaAnswer" parameterType="QnaAnswerDto">		
		insert into qnaAnswer(qnaAnswerNum,itemQnaNum, answerCreate ,qnaContent)
		values(#{qnaAnswerNum},#{itemQnaNum},sysdate, #{qnaContent})	
	</insert>

	<!-- 답변확인 -->
	<select id="findQnaAnswer" parameterType="int" resultType="QnaAnswerDto">	
		select * from qnaAnswer
		where qnaAnswerNum = #{qnaAnswerNum}
	</select>

	<!--itemQnaNum 으로 읽기 -->
<!-- 	<select id="getReadQnaAnswerData" parameterType="int" resultType="QnaAnswerDto">
		select qnaAnswerNum,itemQnaNum, answerCreate, qnaContent from qnaAnswer
		where itemNum=#{itemNum} 
	</select>
 -->

	<!-- 답변수정 -->
	<update id="updateQnaAnswer" parameterType="QnaAnswerDto">
		update itemQna set itemQnaContent=#{itemQnaContent},ItemQnaCreate= sysdate where
		itemQnaNum=#{itemQnaNum}
	</update> 

	<!-- 답변삭제 -->
	<delete id="deleteQnaAnswer" parameterType="int">
		delete qnaAnswer where
		qnaAnswerNum=#{qnaAnswerNum}
	</delete>

</mapper>